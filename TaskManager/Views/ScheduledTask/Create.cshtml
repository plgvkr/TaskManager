@model ScheduledTask
@{
    ViewData["Title"] = "Create Task";
}

<head>

</head>

@*Todo: DateTime choice only date. DayOfWeek calculate automatic. RepeatType use SelectList.*@
<body>
    <p>Form for create task</p>

    <form method="post" asp-antiforgery=true>
        <p>           
            <input type="hidden" asp-for=Id />
        </p>

        <p>
            <label asp-for="Name">Name</label>
            <input type="text" asp-for=Name />
        </p>

        <p>
            <label asp-for="Description">Description</label>
            <input type="text" asp-for=Description />
        </p>

        <p>
            <label asp-for="DateTime">DateTime</label>
            <input type="date" asp-for=DateTime />
        </p>

        <p>
            <label asp-for="IsCompleted">IsCompleted</label>
            <input type="checkbox" asp-for=IsCompleted />
        </p>
        
        <p>
            <label asp-for="IsRepeated">IsRepeated</label>
            <input type="checkbox" asp-for=IsRepeated />
        </p>

        <p>
            <label asp-for="DayOfWeek">DayOfWeek</label>
            <input type="week" asp-for=DayOfWeek />
        </p>

        <p>
            <label asp-for="RepeatType">RepeatType</label>
            <input type="number" asp-for=RepeatType />
        </p>

        <input type="submit" value="Create" />
    </form>
</body>
